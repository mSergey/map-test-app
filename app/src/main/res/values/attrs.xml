<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="StubImageView">
        <attr name="si_background_color" format="color" />
        <attr name="si_image_src" format="integer" />
        <attr name="si_image_padding" format="dimension" />
        <attr name="si_text" format="string" />
    </declare-styleable>

    <declare-styleable name="Switch3Way">
        <attr name="switch_position" format="enum">
            <enum name="position_start" value="0"/>
            <enum name="position_middle" value="1"/>
            <enum name="position_end" value="2"/>
        </attr>
        <attr name="is_three_way" format="boolean" />
        <attr name="thumb_color_start" format="color" />
        <attr name="thumb_color_middle" format="color" />
        <attr name="thumb_color_end" format="color" />
        <attr name="track_color_start" format="color" />
        <attr name="track_color_end" format="color" />

    </declare-styleable>

    <declare-styleable name="Switch2Way">
        <attr name="checked" format="boolean" />
        <attr name="thumb_color_checked" format="color" />
        <attr name="thumb_color_unchecked" format="color" />
        <attr name="track_color_unchecked" format="color" />
        <attr name="track_color_checked" format="color" />

    </declare-styleable>


</resources>